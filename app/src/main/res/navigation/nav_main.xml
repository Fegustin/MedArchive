<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/favoriteFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.medarchive.ui.AuthFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:popUpTo="@+id/favoriteFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <action
        android:id="@+id/action_global_authFragment"
        app:destination="@id/authFragment"
        app:popUpTo="@+id/listOfItemsFragment"
        app:popUpToInclusive="true" />
    <navigation android:id="@+id/navigation"
        app:startDestination="@id/listOfItemsFragment">
        <fragment
            android:id="@+id/subjectsFragment"
            android:name="com.example.medarchive.ui.SubjectsFragment"
            tools:layout="@layout/fragment_subjects">
            <argument
                android:name="subject"
                app:argType="string" />
            <action
                android:id="@+id/action_subjectsFragment_to_listOfItemsFragment"
                app:destination="@id/listOfItemsFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        </fragment>
        <fragment
            android:id="@+id/listOfItemsFragment"
            android:name="com.example.medarchive.ui.ListOfItemsFragment"
            tools:layout="@layout/fragment_list_of_items">
            <action
                android:id="@+id/action_listOfItemsFragment_to_subjectsFragment"
                app:destination="@id/subjectsFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.medarchive.ui.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_authFragment"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_favoriteFragment_to_navigation"
            app:destination="@id/navigation" />
    </fragment>
</navigation>